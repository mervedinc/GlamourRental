@model List<EntityLayer.Entities.Cart>

@{
    ViewBag.Title = "Sepetim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3>Sepetim</h3>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ürün Bilgisi</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Tarih</th>
                <th>Resim</th>
                <th>Sil</th>
                <th>Kirala</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>
                        <div>
                            @Html.ActionLink("-", "Azalt", new { id = item.Id }, new { @class = "btn btn-info btn-sm azalt" })
                        </div>
                        <div>
                            @Html.TextBoxFor(x => item.Quantity, new { @class = "txt", data_id = item.Id })
                        </div>
                        <div>
                            @Html.ActionLink("+", "Arttir", new { id = item.Id }, new { @class = "btn btn-info btn-sm arttir" })
                        </div>
                    </td>
                    <td>@item.Product?.Price</td>
                    <td>@item.Date.ToString("dd/MM/yyyy")</td>
                    <td><a href="/Product/Details/@item.Product.Id"><img src="@item.Product.Image" width="65" height="110" alt="" /></a></td>
                    <td>@Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')" })</td>
                    <td><a href="/Sales/Buy/@item.Id" class="btn btn-success">Kirala</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="container"> @ViewBag.Tutar</div>
<br />
<div class="container form-group">
    <a href="/Sales/BuyAll" class="btn btn-success form-control">Tümünü Kirala</a>
</div>
<div class="container form-group">
    <a href="/Cart/DeleteRange" class="btn btn-danger form-control">Hepsini Sil</a>
</div>

<style>
    .txt {
        line-height: 18px;
        width: 50px !important;
        height: 32px;
        font-size: 14px;
        text-align: center;
        border: solid 1px #ccc;
        margin-left: 23px;
    }

    .arttir {
        display: block;
        cursor: pointer;
        border: solid 1px #ccc;
        position: absolute;
        margin-top: -32px;
        margin-left: 75px;
    }

    .azalt {
        display: block;
        border: solid 1px #ccc;
        cursor: pointer;
        position: absolute;
        margin-right: 90px;
    }
</style>

<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script>
    $(function () {
        $('.txt').on('change', function () {
            var miktar = parseInt($(this).val()); // Miktarı tam sayıya dönüştür
            var sepetid = $(this).attr('data-id');
            var stok = parseInt($(this).attr('data-stock')); // Ürünün stok miktarı

            // Eğer miktar stok miktarından büyükse, miktarı stok miktarına eşitle
            if (miktar > stok) {
                miktar = stok;
                $(this).val(miktar);
            }

            $.ajax({
                url: '/Cart/DinamikMiktar',
                data: { id: sepetid, miktari: miktar },
                success: function (res) {
                    document.location.reload();
                }
            });
        });
    });
</script>
