@using X.PagedList.Mvc.Core
@using X.PagedList
@using EntityLayer.Entities
@using System.Web

@model IPagedList<EntityLayer.Entities.Sales>

@{
    ViewBag.Title = "Satış Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kiralama Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Ürün Ad</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Resim</th>
        <th>Tarih</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Product != null ? item.Product.Name : "Ürün bilgisi bulunamadı")</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>
                    @if (item.Product != null && !string.IsNullOrEmpty(item.Product.Image))
                    {
                        <a href="@Url.Action("Details", "Product", new { id = item.Product.Id })">
                            <img src="@Url.Content(item.Product.Image)" width="65" height="110" alt="Ürün Resmi" />
                        </a>
                    }
                    else
                    {
                        <span>Resim bulunamadı</span>
                    }
                </td>
                <td>@item.Date.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { sayfa = page }), PagedListRenderOptions.Classic)
