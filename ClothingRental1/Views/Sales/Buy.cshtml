@model EntityLayer.Entities.Cart
@{
    ViewBag.Title = "Buy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal-header">
    <h2>Kirala</h2>
</div>

<div class="container">
    @using (Html.BeginForm("Buy2", "Sales", FormMethod.Post))
    {
        <div class="modal-body">
            @Html.HiddenFor(x => x.Id)

            <div class="form-group">
                Ürün Bilgisi: @(Model.Product != null ? Model.Product.Name : "Ürün bilgisi bulunamadı")
            </div>

            <div class="form-group">
                Adet: @Html.DisplayFor(x => x.Quantity)
            </div>

            <div class="form-group">
                Ürün Resmi: @if (Model.Product != null && !string.IsNullOrEmpty(Model.Product.Image))
                {
                    <img src="@Url.Content(Model.Product.Image)" width="80" height="80" alt="Ürün Resmi" />
                }
                else
                {
                    <span>Ürün resmi bulunamadı</span>
                }
            </div>

            <div class="form-group text-center" style="font-size:15px; color:red">
                Fiyat: @Html.DisplayFor(x => x.Price)
            </div>
        </div>
        <div class="modal-footer" style="float:right">
            <button type="submit" class="btn btn-success">Onay</button>
            <a href="/Cart/Index" class="btn btn-dark">İptal</a>
        </div>
    }
</div>
