@using X.PagedList.Mvc.Core
@using X.PagedList
@using EntityLayer.Entities
@using System.Web;

@model List<EntityLayer.Entities.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<a class="btn btn-primary" href="/AdminProduct/Create">Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>Ad</th>
        <th>Açıklama</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th>Onay</th>
        <th>Resim</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td>
                @if (item.IsApproved == true)
                {
                    <label class="label label-success">Evet</label>
                }
                else
                {
                    <label class="label label-danger">Hayır</label>
                }
            </td>
            <td>
                <a href="/Product/Details/@item.Id"><img src="@item.Image" width="80" height="80" /></a>
            </td>
            <td>
                @if (item.Category != null)
                {
                    @item.Category.Name
                }
                else
                {
                    <span>Belirtilmemiş</span>
                }
            </td>
            <td>@Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')" })</td>
            <td><a href="/AdminProduct/Update/@item.Id" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("Index", new { page }))
