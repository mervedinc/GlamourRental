@model EntityLayer.Entities.Category
@{
    ViewData["Title"] = "Update";
}



<link href="c:\users\merve\.nuget\packages\bootstrap\5.3.3\contentfiles\any\any\wwwroot\css\bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })

                <div class="form-group">
                    <label>Ad</label>
                    @if (Model != null)
                    {
                        <input type="text" class="form-control" name="Name" value="@Model.Name" />
                    }
                    @Html.ValidationMessageFor(x => x.Name, "", new { @style = "color:red" })

                </div>

                <br />

                <div class="form-group">
                    <label>Açıklama</label>
                    @if (Model != null)
                    {
                        <input type="text" class="form-control" name="Description" value="@Model.Description" />
                        @Html.ValidationMessageFor(x => x.Description, "", new { @style = "color:red" })
                    }

                </div>
                <br />
                <button class="btn btn-primary" type="submit">Güncelle</button>

            </form>
        </div>
    </div>
</div>